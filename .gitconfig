[user]
    name = Chenfu Xie
    email = chenfu.xie@hulu.com
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    ignorecase=false
    editor = vim
[diff]
    tool = diffmerge
[difftool "diffmerge"]
    cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = diffmerge
[mergetool "diffmerge"]
    cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
    trustExitCode = false
[color]
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[apply]
        whitespace = fix
[alias]
        st = status
        ci = commit
        cia = commit --amend
        che = cherry-pick
        br = branch
        co = checkout
        di = diff
        fe = fetch --all
        lg = log -p
        lga = log -p --all
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        loa = log --graph --decorate --abbrev-commit --all
        ls = ls-files
        rh = reset --hard
